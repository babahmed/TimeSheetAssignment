@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> localizer
<aside id="sideBar" class="main-sidebar sidebar-dark-primary">
    <a href="/" class="brand-link">
        <img src="~/images/logo-transparent.png" id="brand-logo" alt="logo" class="brand-image img-circle"
             style="opacity: .8">
        <span class="brand-text font-weight-light" style="font-size:0.8em!important">Time Tracker</span>
    </a>
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            @localizer["Dashboard"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a is-active-route asp-area="Catalog" asp-controller="Tracker" class="nav-link">
                        <i class="far fa-hourglass-start nav-icon"></i>
                        <p>
                            @localizer["Tracker"]
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>